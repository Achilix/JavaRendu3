<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourpackage.controller.UpdateEventController" spacing="10" alignment="CENTER" stylesheets="@styles.css">
    <Label text="Update Event" />
    <TextField fx:id="nameField" promptText="Event Name" />
    <TextField fx:id="descriptionField" promptText="Description" />
    <TextField fx:id="dateField" promptText="Date (YYYY-MM-DD)" />
    <Button text="Update" onAction="#handleUpdate" />
</VBox>