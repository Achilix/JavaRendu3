<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourpackage.controller.ReserveTerrainController" spacing="10" alignment="CENTER">
    <Label text="Reserve Terrain" />
    <TextField fx:id="terrainIdField" promptText="Terrain ID" />
    <TextField fx:id="userIdField" promptText="User ID" />
    <TextField fx:id="dateField" promptText="Reservation Date (YYYY-MM-DD)" />
    <Button text="Reserve" onAction="#handleReserve" />
</VBox>