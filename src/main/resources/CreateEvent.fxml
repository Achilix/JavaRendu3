<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourpackage.controller.CreateEventController" spacing="10" alignment="CENTER" stylesheets="@styles.css">
    <Label text="Create Event" />
    <TextField fx:id="nameField" promptText="Event Name" />
    <TextField fx:id="descriptionField" promptText="Description" />
    <TextField fx:id="dateField" promptText="Date (YYYY-MM-DD)" />
    <CheckBox fx:id="reserveSalleCheckBox" text="Reserve Salle" />
    <ComboBox fx:id="salleComboBox" promptText="Select Salle" />
    <CheckBox fx:id="reserveTerrainCheckBox" text="Reserve Terrain" />
    <ComboBox fx:id="terrainComboBox" promptText="Select Terrain" />
    <Button text="Create" onAction="#handleCreate" />
    <Button text="Add Salle" onAction="#showAddSalle" />
    <Button text="Add Terrain" onAction="#showAddTerrain" />
    <Button text="Back to Dashboard" onAction="#showDashboard" />
    <Button text="Manage Users" onAction="#showUserManagement" />
    <VBox fx:id="contentArea" />
</VBox>