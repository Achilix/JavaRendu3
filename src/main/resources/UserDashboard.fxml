<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourpackage.controller.UserDashboardController" spacing="10" alignment="CENTER" stylesheets="@styles.css">
    <Label text="User Dashboard - Available Events" />
    <TableView fx:id="eventsTableView">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="nameColumn" text="Name" />
            <TableColumn fx:id="descriptionColumn" text="Description" />
            <TableColumn fx:id="dateColumn" text="Date" />
        </columns>
    </TableView>
    <Button text="Back to Main" onAction="#showMainView" />
</VBox>